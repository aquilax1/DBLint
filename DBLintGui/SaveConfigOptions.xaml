<Window x:Class="DBLint.DBLintGui.SaveConfigOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export configuration file" Height="173" Width="295">
    <Grid Margin="10">
        <StackPanel>
            <CheckBox Name="ExportRules" Content="Rule selection and settings" IsChecked="True"></CheckBox>
            <CheckBox Name="ExportSQLRules" Content="User-defined rules" IsChecked="True"></CheckBox>
            <CheckBox Name="ExportConnection" Content="Connection"></CheckBox>
            <CheckBox Name="ExportTables">Table selection</CheckBox>            
            <Button Name="ChooseFile" Width="100" Margin="10" Click="ChooseFile_Click">Choose file...</Button>
        </StackPanel>
    </Grid>
</Window>
